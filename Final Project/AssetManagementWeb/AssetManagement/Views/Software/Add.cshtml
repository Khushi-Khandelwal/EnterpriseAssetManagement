@model AssetManagement.Models.SoftwareModel

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="SoftwareName" class="control-label"></label>
                <input asp-for="SoftwareName" class="form-control" />
                <span asp-validation-for="SoftwareName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfSoftware" class="control-label"></label>
                <input asp-for="TypeOfSoftware" class="form-control" />
                <span asp-validation-for="TypeOfSoftware" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfPurchase" class="control-label"></label>
                <input asp-for="DateOfPurchase" class="form-control" />
                <span asp-validation-for="DateOfPurchase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfExpiry" class="control-label"></label>
                <input asp-for="DateOfExpiry" class="form-control" />
                <span asp-validation-for="DateOfExpiry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LicenceNumber" class="control-label"></label>
                <input asp-for="LicenceNumber" class="form-control" />
                <span asp-validation-for="LicenceNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
